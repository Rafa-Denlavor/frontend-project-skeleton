{
    "compilerOptions": {
      "target": "es2020",
      "module": "commonjs",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "outDir": "./dist",
      "noEmit": true,
      "noImplicitAny": true,
      "removeComments": true,
      "allowJs": true,
      "declaration": true,
      "resolveJsonModule": true,
      "baseUrl": ".",
      "rootDir": "./src",
      "paths": {
        "@root/*": ["./src/*"],
        "@server/*": ["./src/server/*"],
        "@controllers/*": ["./src/controllers/*"],
        "@helpers/*": ["./src/helpers/*"],
        "@middlewares/*": ["./src/middlewares/*"],
      }
    },
    "include": ["./src/**/*"]
  }